extends layout

block content
 include ./partials/indexNav.pug 
 include ./partials/validationErrors.pug 
 include ./partials/flashMessages.pug
 .container
  .col-md-6.col-md-offset-3    
    br
    br
    h1
     span
      |  Sign Up
     br
     br
    form(method='post', action='/signup')
      .form-group
        label Name
        input.form-control(type='text', placeholder='Name', name='name', required)
      .form-group
        label Username
        input.form-control(type='text', placeholder='Username', name='username', required)
      .form-group
        label Email
        input.form-control(type='email', placeholder='Email', name='email', required)
      .form-group
        label Password
        input.form-control(type='password', placeholder='Password', name='password')
      .form-group
        label Confirm Password
        input.form-control(type='password', placeholder='Password', name='password2')
      button.btn.btn-success.btn-lg(type='submit') Submit
      hr
      p
        | Already have an account? 
        a(href='/login') Login
      p
        | Or go 
        a(href='/') Cancel
        | .